<!-- Scaffolding generated by Kryptonite <%= kryptonite_get_full_version_string %> -->

<h2><%=t "scaffold.add_new", :model=>"<%= singular_name.humanize.downcase %>" %></h2>

<%%= form_for @<%= file_name %>, :url => kryptonite_<%= @plural_route %>_path do |f| %>
	
	<%%= render :partial => 'kryptonite/<%= plural_name %>/form', :locals => { :f => f } %>
	
	<p class="submits">
		<%%= link_to t("scaffold.cancel"), kryptonite_<%= @plural_route %>_path, :class => 'cancel' %> or
		<%%= f.submit t("scaffold.add_new", :model=>"<%= singular_name.humanize.downcase %>"), :class => "update" %>
	</p>

<%% end %>

<%%= content_for :sidebar do %>
	<li><%%= link_to "#{kryptonite_show_icon "table"}#{t("scaffold.back_to_list")}".html_safe, kryptonite_<%= @plural_route %>_path %></li>
<%% end %>